<?xml version="1.0" encoding="utf-8"?>

<com.github.florent37.materialviewpager.MaterialViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/materialViewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:pstsIndicatorColor="#FFF"
    app:viewpager_animatedHeaderImage="false"
    app:viewpager_color="@color/ActionBarRed"
    app:viewpager_disableToolbar="false"
    app:viewpager_displayToolbarWhenSwipe="true"
    app:viewpager_enableToolbarElevation="false"
    app:viewpager_headerAdditionalHeight="3.6dp"
    app:viewpager_headerAlpha="0"
    app:viewpager_headerHeight="41dp"
    app:viewpager_hideLogoWithFade="false"
    app:viewpager_hideToolbarAndTitle="false"
    app:viewpager_logoMarginTop="0dp"
    app:viewpager_pagerTitleStrip="@layout/my_tabs"
    app:viewpager_parallaxHeaderFactor="1.0"
    app:viewpager_transparentToolbar="false" />
