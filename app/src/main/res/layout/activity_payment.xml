<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        card_view:cardElevation="1dp">

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Remittance ID: R6 "
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="250dp"
        android:layout_marginEnd="43dp"
        android:background="@color/Green"
        android:text="Approve"
        android:textColor="@color/AliceBlue" />

    <Button
        android:id="@+id/buttonDeny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonApprove"
        android:layout_alignBottom="@+id/buttonApprove"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:background="@color/ActionBarRed"
        android:text="Deny"
        android:textColor="@color/AliceBlue" />

    <TextView
        android:id="@+id/moneyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonDeny"
        android:layout_below="@+id/textView"
        android:layout_marginTop="75dp"
        android:text="NOK 10.000"
        android:textSize="18sp"
        android:elevation="5dp"
        android:layout_toStartOf="@+id/buttonApprove" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonApprove"
        android:layout_alignTop="@+id/moneyTextView"
        android:elevation="5dp"
        android:text="03.05.17" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/moneyTextView"
        android:layout_below="@+id/moneyTextView"
        android:layout_marginTop="53dp"
        android:elevation="5dp"
        android:text="Base Company" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:elevation="5dp"
        android:layout_marginTop="36dp"
        android:text="Payment Partner" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dateTextView"
        android:layout_alignTop="@+id/textView2"
        android:elevation="5dp"
        android:text="Continuum Reinsurance" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:elevation="5dp"
        android:text="Uni Storebrand" />

    <EditText
        android:id="@+id/comment"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/buttonDeny"
        android:background="@null"
        android:clickable="true"
        android:drawablePadding="4dp"
        android:drawableTint="@android:color/darker_gray"

        android:focusable="true"
        android:gravity="top|left"
        android:hint="Comment"
        android:padding="10dp"
        android:textColor="@color/Aqua"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp"
        android:translationZ="8dp" />


